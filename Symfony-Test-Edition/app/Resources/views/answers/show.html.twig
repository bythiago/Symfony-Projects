{% extends 'base.html.twig' %}

{% block body %}
    <h1>Answer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ answer.answer }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ answer.userId }}</td>
            </tr>
            <tr>
                <th>Questionid</th>
                <td>{{ answer.questionId }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if answer.createdAt %}{{ answer.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if answer.updatedAt %}{{ answer.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{% if answer.deletedAt %}{{ answer.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('answers_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('answers_edit', { 'id': answer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
